# 应用前端访问地址（本地开发默认http://localhost:3000）
NEXT_PUBLIC_APP_URL=http://localhost:3000
# 环境: development (开发) / production (生产)
NODE_ENV=development/production

# IP 地理检测 API
IP_API_URL=<你的IP地理检测API URL>

# 全局语言(zh/en)
NEXT_PUBLIC_DEFAULT_LANGUAGE=zh/en

# Supabase 配置 (国际版)
NEXT_PUBLIC_SUPABASE_URL=<你的Supabase项目 URL>
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=<你的Supabase可发布密钥>
SUPABASE_SERVICE_ROLE_KEY=<你的Supabase服务角色密钥>

# CloudBase 配置 (国内版)
WECHAT_CLOUDBASE_ID=<你的微信云开发环境 ID>
CLOUDBASE_SECRET_ID=<你的云开发Secret ID>
CLOUDBASE_SECRET_KEY=<你的云开发Secret Key>

# 微信 OAuth 配置 (国内版)
NEXT_PUBLIC_WECHAT_APP_ID=<你的微信 AppID>
WECHAT_APP_SECRET=<你的微信 AppSecret>

# 阿里千问 API配置
DASHSCOPE_API_KEY=<你的阿里千问 API 密钥>

# Mistral API配置
MISTRAL_API_KEY=<你的Mistral API 密钥>

# PayPal 配置（国际版支付）
PAYPAL_CLIENT_ID=<你的PayPal ClientID>
PAYPAL_CLIENT_SECRET=<你的PayPal Secretkey>
# 环境: sandbox (测试) / production (生产)
PAYPAL_ENVIRONMENT=sandbox/production
# Webhook ID（PayPal Dashboard → Webhooks）
PAYPAL_WEBHOOK_ID=<你的PayPal WebhookID>
# 仅开发环境可设为 true，生产环境必须为 false
PAYPAL_SKIP_SIGNATURE_VERIFICATION=true/false

# 上传图片大小限制 (MB)，设为 0 可禁用图片上传
MAX_IMAGE_UPLOAD_MB=6
# 上传视频大小限制 (MB)，设为 0 可禁用视频上传
MAX_VIDEO_UPLOAD_MB=256
# 上传音频大小限制 (MB)，设为 0 可禁用音频上传
MAX_AUDIO_UPLOAD_MB=100
# 单次最多上传文件数量（仅媒体：图片/视频/音频）
NEXT_PUBLIC_MAX_FILE_COUNT=10
