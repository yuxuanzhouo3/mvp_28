# ============================================================================
# MornGPT 环境变量配置示例
# 复制此文件为 .env.local 并填入实际值
# ============================================================================

# ----------------------------------------------------------------------------
# 基础配置
# ----------------------------------------------------------------------------

# 应用前端访问地址
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_URL=http://localhost:3000

# 环境模式: development | production
NODE_ENV=development

# 全局语言版本: zh (国内版) | en (国际版)
# zh = 使用 CloudBase + 微信/支付宝支付
# en = 使用 Supabase + Stripe/PayPal 支付
NEXT_PUBLIC_DEFAULT_LANGUAGE=XX

# ----------------------------------------------------------------------------
# Supabase 配置 (国际版必填)
# https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# ----------------------------------------------------------------------------

# （可选）服务端 Supabase URL（用于国内版后台/容器运行时注入，避免 NEXT_PUBLIC_* 构建期内联）
SUPABASE_URL=https://your-project.supabase.co

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=XX
SUPABASE_SERVICE_ROLE_KEY=XX

# ----------------------------------------------------------------------------
# 腾讯云 CloudBase 配置 (国内版必填)
# https://console.cloud.tencent.com/tcb
# ----------------------------------------------------------------------------

WECHAT_CLOUDBASE_ID=XXXXXXXXXX
CLOUDBASE_SECRET_ID=XXXXXXXXXX
CLOUDBASE_SECRET_KEY=XXXXXXXXXX

# ----------------------------------------------------------------------------
# 微信开放平台配置 (国内版 OAuth 登录)
# https://open.weixin.qq.com/
# ----------------------------------------------------------------------------

NEXT_PUBLIC_WECHAT_APP_ID=XXXXXXXXXX
WECHAT_APP_ID=XXXXXXXXXX
WECHAT_APP_SECRET=XXXXXXXXXX

# ----------------------------------------------------------------------------
# 微信支付配置 (国内版)
# https://pay.weixin.qq.com/
# 注意：微信支付使用的 AppID 是公众号/小程序的 AppID，与开放平台的 AppID 不同
# ----------------------------------------------------------------------------

WECHAT_PAY_APP_ID=XXXXXXXXXX
WECHAT_PAY_MCH_ID=XXXXXXXXXX
WECHAT_PAY_API_V3_KEY=XXXXXXXXXX
WECHAT_PAY_SERIAL_NO=XXXXXXXXXX
WECHAT_PAY_PRIVATE_KEY=XXXXXXXXXX

# ----------------------------------------------------------------------------
# 支付宝配置 (国内版)
# https://open.alipay.com/
# ----------------------------------------------------------------------------

ALIPAY_APP_ID=XXXXXXXXXX
ALIPAY_PRIVATE_KEY=XXXXXXXXXX
ALIPAY_PUBLIC_KEY=XXXXXXXXXX
ALIPAY_ALIPAY_PUBLIC_KEY=XXXXXXXXXX

# 支付宝网关 (生产环境使用正式网关)
ALIPAY_GATEWAY_URL=https://openapi.alipay.com/gateway.do
# 沙箱模式 (开发测试用)
# ALIPAY_GATEWAY_URL=https://openapi-sandbox.dl.alipaydev.com/gateway.do
# ALIPAY_SANDBOX=true

# 证书模式 (可选，如使用证书模式请配置)
# ALIPAY_CERT_MODE=true
# ALIPAY_APP_CERT_PATH=/path/to/appCertPublicKey.crt
# ALIPAY_ALIPAY_PUBLIC_CERT_PATH=/path/to/alipayCertPublicKey_RSA2.crt
# ALIPAY_ALIPAY_ROOT_CERT_PATH=/path/to/alipayRootCert.crt

# ----------------------------------------------------------------------------
# Stripe 配置 (国际版)
# https://dashboard.stripe.com/apikeys
# ----------------------------------------------------------------------------

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=XXXXXXXXXX
STRIPE_SECRET_KEY=XXXXXXXXXX
STRIPE_WEBHOOK_SECRET=XXXXXXXXXX

# Stripe Price IDs (从 Stripe Dashboard 获取)
# STRIPE_PRO_MONTHLY_PRICE_ID=price_...
# STRIPE_PRO_ANNUAL_PRICE_ID=price_...

# ----------------------------------------------------------------------------
# PayPal 配置 (国际版)
# https://developer.paypal.com/dashboard/applications
# ----------------------------------------------------------------------------

PAYPAL_CLIENT_ID=XXXXXXXXXX
PAYPAL_CLIENT_SECRET=XXXXXXXXXX
# 环境: sandbox (测试) | live (生产)
PAYPAL_ENVIRONMENT=sandbox
# Webhook ID (PayPal Dashboard → Webhooks)
PAYPAL_WEBHOOK_ID=XXXXXXXXXX
# 仅开发环境可设为 true，生产环境必须为 false
PAYPAL_SKIP_SIGNATURE_VERIFICATION=false

# ----------------------------------------------------------------------------
# AI 模型 API 配置
# ----------------------------------------------------------------------------

# 阿里云 DashScope (国内版 - 通义千问)
# https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=XXXXXXXXXX

# Mistral AI (国际版)
# https://console.mistral.ai/api-keys/
MISTRAL_API_KEY=XXXXXXXXXX

# ----------------------------------------------------------------------------
# 管理后台安全配置
# ----------------------------------------------------------------------------

# 管理员会话密钥 (生产环境必须修改！)
# 建议使用: openssl rand -base64 32 生成
ADMIN_SESSION_SECRET=XXXXXXXXXX

# ----------------------------------------------------------------------------
# IP 地理检测 (可选)
# ----------------------------------------------------------------------------

# IP 检测 API URL (注意结尾的 /json/)
IP_API_URL=https://ipapi.co/json/

# 地理检测失败时是否阻止访问: true | false
GEO_FAIL_CLOSED=false

# 允许的跨域来源 (逗号分隔)
# ALLOWED_ORIGINS=https://example.com,https://www.example.com

# ----------------------------------------------------------------------------
# 用户配额设置
# ----------------------------------------------------------------------------

# 未登录用户每日配额
NEXT_PUBLIC_TRIAL_DAILY_LIMIT=XX

# Free 用户配额
NEXT_PUBLIC_FREE_DAILY_LIMIT=XX
NEXT_PUBLIC_FREE_MONTHLY_PHOTO_LIMIT=XX
NEXT_PUBLIC_FREE_MONTHLY_VIDEO_AUDIO_LIMIT=XX
NEXT_PUBLIC_FREE_CONTEXT_MSG_LIMIT=XX
NEXT_PUBLIC_FREE_CONVERSATION_LIMIT=XX

# Basic 用户配额
NEXT_PUBLIC_BASIC_DAILY_LIMIT=XX
NEXT_PUBLIC_BASIC_MONTHLY_PHOTO_LIMIT=XX
NEXT_PUBLIC_BASIC_MONTHLY_VIDEO_AUDIO_LIMIT=XX
NEXT_PUBLIC_BASIC_CONTEXT_MSG_LIMIT=XX

# Pro 用户配额
NEXT_PUBLIC_PRO_DAILY_LIMIT=XX
NEXT_PUBLIC_PRO_MONTHLY_PHOTO_LIMIT=XX
NEXT_PUBLIC_PRO_MONTHLY_VIDEO_AUDIO_LIMIT=XX
NEXT_PUBLIC_PRO_CONTEXT_MSG_LIMIT=XX

# Enterprise 用户配额
NEXT_PUBLIC_ENTERPRISE_DAILY_LIMIT=XX
NEXT_PUBLIC_ENTERPRISE_MONTHLY_PHOTO_LIMIT=XX
NEXT_PUBLIC_ENTERPRISE_MONTHLY_VIDEO_AUDIO_LIMIT=XX
NEXT_PUBLIC_ENTERPRISE_CONTEXT_MSG_LIMIT=XX

# ----------------------------------------------------------------------------
# 文件上传限制
# ----------------------------------------------------------------------------

# 上传图片大小限制 (MB)，设为 0 可禁用
MAX_IMAGE_UPLOAD_MB=XX

# 上传视频大小限制 (MB)，设为 0 可禁用
MAX_VIDEO_UPLOAD_MB=XX

# 上传音频大小限制 (MB)，设为 0 可禁用
MAX_AUDIO_UPLOAD_MB=XX

# 单次最多上传文件数量
NEXT_PUBLIC_MAX_FILE_COUNT=XX

# ----------------------------------------------------------------------------
# 其他可选配置
# ----------------------------------------------------------------------------

# Vercel 部署时自动设置
# VERCEL_URL=your-app.vercel.app

# API 基础路径 (通常不需要修改)
# DOMESTIC_API_BASE_URL=/api/domestic
# INTERNATIONAL_API_BASE_URL=/api/international
