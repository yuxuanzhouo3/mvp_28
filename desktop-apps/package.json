{
  "name": "morngpt-desktop",
  "version": "1.0.0",
  "description": "MornGPT Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "dist": "npm run build:all",
    "pack": "electron-builder --dir",
    "pack:mac": "electron-builder --dir --mac",
    "pack:win": "electron-builder --dir --win",
    "pack:linux": "electron-builder --dir --linux"
  },
  "keywords": [
    "morngpt",
    "ai",
    "chat",
    "desktop",
    "electron"
  ],
  "author": "MornGPT Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.morngpt.desktop",
    "productName": "MornGPT",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "minimumSystemVersion": "10.15.0"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32", "arm64"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32", "arm64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "armv7l", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "armv7l", "arm64"]
        },
        {
          "target": "snap",
          "arch": ["x64"]
        },
        {
          "target": "flatpak",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "MornGPT Installer",
      "icon": "assets/icon.icns",
      "background": "assets/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
